{
    "compilerOptions": {
        "outDir": "dist/js",
        "target": "ES6", //converter o código para versão do ECMAScript6
        "noEmitOnError": true,
        "noImplicitAny": true, //fornecer um tipo da minha escolha (string, number, entre outros)
        "removeComments": true, // remover comentários do arquivo final. 
        "strictNullChecks": true
    },
    "include": ["app/**/*"]
}